<measure xmlns="http://www.tei-c.org/ns/Examples" xmlns:rng="http://relaxng.org/ns/structure/1.0" xmlns:sch="http://purl.oclc.org/dsdl/schematron"></measure>
<app xmlns="http://www.tei-c.org/ns/Examples" xmlns:rng="http://relaxng.org/ns/structure/1.0" xmlns:sch="http://purl.oclc.org/dsdl/schematron">
   <rdg source="#critApp.source1"></rdg>
   <rdg source="#critApp.source2 critApp.#source3">
      <!-- whereas source1 omits it, source2 and source3 have an additional measure -->
      <measure>
         <staff>
            <layer>
               <app>
                  <!-- while source2 provides a measure rest, source3 has a whole note -->
                  <rdg source="#critApp.source2">
                     <mRest></mRest>
                  </rdg>
                  <rdg source="#critApp.source3">
                     <note dur="1" oct="3" pname="g"></note>
                  </rdg>
               </app>
            </layer>
         </staff>
      </measure>
   </rdg>
</app>
<measure xmlns="http://www.tei-c.org/ns/Examples" xmlns:rng="http://relaxng.org/ns/structure/1.0" xmlns:sch="http://purl.oclc.org/dsdl/schematron"></measure>